@model IEnumerable<Restaurant.Models.LoaiSanPham>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TenLoaiSanPham)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.TenLoaiSanPham)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.MaLoaiSanPham">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.MaLoaiSanPham">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.MaLoaiSanPham">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>